{
  "name": "@danielsogl/angular-setup",
  "version": "1.1.1",
  "description": "Angular project setup schematic with standard dependencies",
  "main": "dist/collection.json",
  "schematics": "./dist/collection.json",
  "ng-update": {
    "migrations": "./dist/migrations.json"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "cp src/collection.json dist/collection.json && cp src/ng-add/schema.json dist/ng-add/schema.json && cp src/migrations.json dist/migrations.json",
    "prepublishOnly": "npm run build",
    "test": "npm run build && vitest run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "lefthook install"
  },
  "keywords": [
    "angular",
    "schematics",
    "setup",
    "eslint",
    "prettier",
    "vitest",
    "lefthook"
  ],
  "author": "Daniel Sogl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielsogl/angular-setup.git"
  },
  "type": "commonjs",
  "dependencies": {
    "@angular-eslint/schematics": "^20.3.0",
    "package-manager-detector": "^1.3.0"
  },
  "devDependencies": {
    "@angular-devkit/core": "^20.3.3",
    "@angular-devkit/schematics": "^20.3.3",
    "@angular-devkit/schematics-cli": "^20.3.3",
    "@schematics/angular": "^20.3.3",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "lefthook": "^1.13.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0"
  }
}
