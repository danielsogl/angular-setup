{
  "$schema": "http://json-schema.org/schema",
  "$id": "NgSetupSchema",
  "title": "Angular Project Setup Schematic",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project to setup",
      "$default": {
        "$source": "projectName"
      }
    },
    "eslint": {
      "type": "boolean",
      "description": "Add ESLint configuration",
      "default": true
    },
    "prettier": {
      "type": "boolean",
      "description": "Add Prettier configuration",
      "default": true
    },
    "lefthook": {
      "type": "boolean",
      "description": "Add Lefthook git hooks",
      "default": true
    },
    "vitest": {
      "type": "boolean",
      "description": "Configure Vitest as test runner and remove Karma",
      "default": true
    }
  },
  "required": ["project"]
}